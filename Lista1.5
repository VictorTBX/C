#include <stdio.h>
#include <stdlib.h>

int main()
{
    float salario, totalSalario = 0, mediaSalario = 0, maiorSalario = 0, mediaFilhos = 0;
    int menorCem = 0, filhos, totalFilhos = 0, cont = 0;
    char resp;
    
    do {
        printf("Informe o valor do salario");
        scanf("%f", &salario);
        printf("Informe o numero de filhos");
        scanf("%d", &filhos);
        
        totalSalario = totalSalario + salario;
        totalFilhos = totalFilhos + filhos;
        
        if (maiorSalario == 0) {
            maiorSalario = salario;
        } else {
            if(salario > maiorSalario)
                maiorSalario = salario;
        }
        
        if(salario < (float)100)
            menorCem++;
        
        cont++;
        
        printf("Deseja inserir mais um salÃ¡rio? (s/n)");
        scanf("%c", resp);
        fflush(stdin);
    }while(resp == 's' || resp == 'S');
    
    mediaSalario = totalSalario/cont;
    mediaFilhos = totalFilhos / cont;
    menorCem = (menorCem/cont) * 100;
    
    printf("Media de salarios: %.2f", mediaSalario);
    printf("Media de filhos: %.2f", mediaFilhos);
    printf("Maior salario: %.2f", maiorSalario);
    printf("Porcentagem de pessoas com salario menor que 100: %.2f", menorCem);
    
    return 0;
}
