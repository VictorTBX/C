#include <stdio.h>
#include <stdlib.h>

int main()
{
	float resp, homem = 0, sim = 0, homemNao = 0, mulherSim = 0, porcHomem, porcMulher;
	char sexo;
	int i;

	for (i = 0; i < 2000; i++) {
		fflush(stdin);
		printf("Informe o sexo (h/m):\n");
		scanf("%c", &sexo);
		printf("Qual a reposta? (1 - Sim / 0 - Nao)\n");
		scanf("%d", &resp);


		if (sexo == 'h' || sexo == 'H') {
			homem++;
			if (resp == 0){
				homemNao++;
				printf("Teste\n");
			}
		}
		else {
			if ((sexo == 'm' || sexo == 'M') && resp == 1) {
				mulherSim++;
				printf("Teste\n");
			}
		}

		if (resp == 1)
			sim++;
	}

	porcHomem = (homemNao / homem) * 100;
	porcMulher = mulherSim / (2000 - homem) * 100;
	printf("%d pessoas responderam SIM\n", sim);
	printf("%d pessoas responderam NAO\n", (2000 - sim));
	printf("%.2f porcento das mulheres responderam SIM\n", porcMulher);
	printf("%.2f porcento dos homens responderam NAO\n", porcHomem);

	system("PAUSE");
	return 0;
}
