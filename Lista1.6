#include <stdio.h>
#include <stdlib.h>

int main()
{
    int resp, homem, sim, homemNao, mulherSim;
    char sexo;
    
    for (int i = 0; i < 2000; i++) {
      printf("Informe o sexo (h/m):\n");
      scanf("%c", &sexo);
      fflush(stdin);
      printf("Qual a reposta? (1 - Sim / 0 - Nao)\n");
      scanf("%d", &resp);
      
      if (sexo == 'h' || sexo == 'H') {
        homem++;
        if (resp == 0)
          homemNao++;
      } else {
        if(resp == 1)
          mulherSim;
      }
      
      if (resp == 1)
        sim++;
    }
    
    printf("%d pessoas responderam SIM\n", sim);
    printf("%d pessoas responderam NAO\n", (2000-sim));
    printf("%d % das mulheres responderam SIM\n", (mulherSim/(2000-homem)) * 100);
    printf("%d % dos homens responderam NAO\n", (homemNao/homem) * 100);
    
    return 0;
}
