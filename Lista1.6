#include <stdio.h>
#include <stdlib.h>

int main()
{
	int resp, homem = 0, sim = 0, homemNao = 0, mulherSim = 0, i;
	char sexo = 'h';

	for (i = 0; i < 4; i++) {		
		fflush(stdin);
		printf("Informe o sexo (h/m):\n");
		scanf("%c", &sexo);		
		sexo = getchar();
		printf("%c", sexo);
		printf("Qual a reposta? (1 - Sim / 0 - Nao)\n");
		scanf("%d", &resp);
		

		if (sexo == 'h' || sexo == 'H') {
			homem++;
			if (resp == 0)
				homemNao++;
		} 
		else {
			if ((sexo == 'm' || sexo == 'M') && resp == 1) {
				mulherSim++;
			}
		}

		if (resp == 1)
			sim++;
	}

	int mulher = 2000 - homem;	
	printf("%d pessoas responderam SIM\n", sim);
	printf("%d pessoas responderam NAO\n", (2000 - sim));
	printf("%f porcento das mulheres responderam SIM\n", (mulherSim / mulher) * 100);
	printf("%f porcento dos homens responderam NAO\n", ((homemNao / homem) * 100));

	system("PAUSE");
	return 0;
}
